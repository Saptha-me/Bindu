# Bindu Environment Configuration Example
# Copy this file to .env and update with your values

# ============================================================================
# Project Settings
# ============================================================================
ENVIRONMENT=development  # Options: development, staging, production
PROJECT__NAME=bindu Agent
PROJECT__VERSION=0.1.0

# ============================================================================
# Network Settings
# ============================================================================
HOST=localhost
PORT=3773
NETWORK__REQUEST_TIMEOUT=30
NETWORK__CONNECTION_TIMEOUT=10

# ============================================================================
# Storage Settings
# ============================================================================
# Storage backend: memory (default) or postgres
STORAGE_BACKEND=memory

# PostgreSQL Configuration (only needed if STORAGE_BACKEND=postgres)
DATABASE_URL=postgresql://bindu:bindu@localhost:5432/bindu  # pragma: allowlist secret
STORAGE__POSTGRES_POOL_MIN=2
STORAGE__POSTGRES_POOL_MAX=10
STORAGE__POSTGRES_TIMEOUT=60
STORAGE__POSTGRES_COMMAND_TIMEOUT=30
STORAGE__POSTGRES_MAX_RETRIES=3
STORAGE__POSTGRES_RETRY_DELAY=1.0
STORAGE__RUN_MIGRATIONS_ON_STARTUP=true

# ============================================================================
# Scheduler Settings
# ============================================================================
# Scheduler backend: memory (default, single-process) or redis (distributed)
SCHEDULER__BACKEND=memory

# Redis Configuration (only needed if SCHEDULER__BACKEND=redis)
SCHEDULER__REDIS_URL=redis://localhost:6379/0
SCHEDULER__REDIS_HOST=localhost
SCHEDULER__REDIS_PORT=6379
# SCHEDULER__REDIS_PASSWORD=  # Uncomment if Redis requires authentication
SCHEDULER__REDIS_DB=0
SCHEDULER__QUEUE_NAME=bindu:tasks
SCHEDULER__MAX_CONNECTIONS=10
SCHEDULER__RETRY_ON_TIMEOUT=true

# ============================================================================
# Logging Settings
# ============================================================================
LOGGING__DEFAULT_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOGGING__LOG_DIR=logs
LOGGING__LOG_FILENAME=bindu_server.log

# ============================================================================
# Authentication Settings (Optional)
# ============================================================================
AUTH__ENABLED=false
AUTH__PROVIDER=auth0  # Options: auth0, cognito, azure, custom
AUTH__DOMAIN=
AUTH__AUDIENCE=
AUTH__ISSUER=

# ============================================================================
# x402 Payment Settings (Optional)
# ============================================================================
X402__PROVIDER=coinbase
X402__DEFAULT_NETWORK=base-sepolia
X402_PAY_TO=  # Your payment address

# ============================================================================
# Observability Settings (Optional)
# ============================================================================
# Add OpenTelemetry configuration here if needed
