# Ory Hydra Environment Configuration
# Copy this file to .env.hydra and update with your values

# PostgreSQL Configuration
POSTGRES_USER=bindu
POSTGRES_PASSWORD=bindu_secret
POSTGRES_DB=bindu_auth
DATABASE_URL=postgres://bindu:bindu_secret@localhost:5432/bindu_auth?sslmode=disable

# Hydra Configuration
HYDRA_ADMIN_URL=http://localhost:4445
HYDRA_PUBLIC_URL=http://localhost:4444
HYDRA_SYSTEM_SECRET=bindu_hydra_system_secret_change_in_production
HYDRA_COOKIE_SECRET=bindu_hydra_cookie_secret_change_in_production

# Kratos Configuration
KRATOS_ADMIN_URL=http://localhost:4434
KRATOS_PUBLIC_URL=http://localhost:4433
KRATOS_COOKIE_SECRET=bindu_kratos_cookie_secret_change_in_production
KRATOS_CIPHER_SECRET=bindu_kratos_cipher_secret_change_in_production

# Bindu Application Configuration
BINDU_URL=http://localhost:3773
USE_HYDRA_AUTH=false  # Set to true to enable Hydra authentication

# OAuth Provider Credentials
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Notion OAuth
NOTION_CLIENT_ID=your_notion_client_id
NOTION_CLIENT_SECRET=your_notion_client_secret

# Slack OAuth (optional)
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret

# Email Configuration (MailSlurper for development)
SMTP_CONNECTION_URI=smtps://test:test@localhost:4437/?skip_ssl_verify=true
SMTP_FROM_ADDRESS=noreply@bindu.local
SMTP_FROM_NAME=Bindu Authentication
