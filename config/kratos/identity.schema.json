{
    "$id": "https://getbindu.com/schemas/identity.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Bindu User Identity",
    "type": "object",
    "properties": {
        "traits": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "format": "email",
                    "title": "Email",
                    "minLength": 3,
                    "ory.sh/kratos": {
                        "credentials": {
                            "password": {
                                "identifier": true
                            }
                        },
                        "verification": {
                            "via": "email"
                        },
                        "recovery": {
                            "via": "email"
                        }
                    }
                },
                "name": {
                    "type": "object",
                    "properties": {
                        "first": {
                            "type": "string",
                            "title": "First Name"
                        },
                        "last": {
                            "type": "string",
                            "title": "Last Name"
                        }
                    }
                },
                "oauth_connections": {
                    "type": "object",
                    "description": "OAuth provider connections and tokens",
                    "properties": {
                        "notion": {
                            "type": "object",
                            "properties": {
                                "connected": {
                                    "type": "boolean",
                                    "default": false
                                },
                                "access_token": {
                                    "type": "string"
                                },
                                "refresh_token": {
                                    "type": "string"
                                },
                                "token_type": {
                                    "type": "string"
                                },
                                "expires_at": {
                                    "type": "string",
                                    "format": "date-time"
                                },
                                "workspace_id": {
                                    "type": "string"
                                },
                                "workspace_name": {
                                    "type": "string"
                                }
                            }
                        },
                        "google": {
                            "type": "object",
                            "properties": {
                                "connected": {
                                    "type": "boolean",
                                    "default": false
                                },
                                "access_token": {
                                    "type": "string"
                                },
                                "refresh_token": {
                                    "type": "string"
                                },
                                "token_type": {
                                    "type": "string"
                                },
                                "expires_at": {
                                    "type": "string",
                                    "format": "date-time"
                                },
                                "scopes": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "slack": {
                            "type": "object",
                            "properties": {
                                "connected": {
                                    "type": "boolean",
                                    "default": false
                                },
                                "access_token": {
                                    "type": "string"
                                },
                                "team_id": {
                                    "type": "string"
                                },
                                "team_name": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "agent_preferences": {
                    "type": "object",
                    "description": "User preferences for agent behavior",
                    "properties": {
                        "default_model": {
                            "type": "string"
                        },
                        "enable_telemetry": {
                            "type": "boolean",
                            "default": true
                        }
                    }
                }
            },
            "required": [
                "email"
            ],
            "additionalProperties": false
        }
    }
}